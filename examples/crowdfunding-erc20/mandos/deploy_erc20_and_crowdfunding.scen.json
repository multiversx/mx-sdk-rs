{
    "name": "deploy erc20 and give its address to the crowdfunding contract",
    "steps": [
      {
        "step": "setState",
        "accounts": {
          "address:erc20_owner_address": {
            "nonce": "0",
            "balance": "0",
            "storage": {}
          },
          "address:crowdfunding_owner_address": {
            "nonce": "0",
            "balance": "0",
            "storage": {}
          }
        },
        "newAddresses": [
          {
            "creatorAddress": "address:erc20_owner_address",
            "creatorNonce": "0",
            "newAddress": "address:the_erc20_contract"
          },
          {
            "creatorAddress": "address:crowdfunding_owner_address",
            "creatorNonce": "0",
            "newAddress": "address:the_crowdfunding_contract"
          }
        ]
      },
      {
        "step": "scDeploy",
        "txId": "deploy",
        "tx": {
          "from": "address:erc20_owner_address",
          "contractCode": "file:../../simple-erc20/output/simple-erc20.wasm",
          "value": "0",
          "arguments": [
              "1,000,000,000"
          ],
          "gasLimit": "1,000,000",
          "gasPrice": "0"
        },
        "expect": {
          "status": "0",
          "gas": "*",
          "refund": "*"
        }
      },
      {
        "step": "checkState",
        "accounts": {
          "address:erc20_owner_address": {
            "nonce": "1",
            "balance": "0",
            "storage": {}
          },
          "address:crowdfunding_owner_address": {
            "nonce": "0",
            "balance": "0",
            "storage": {}
          },
          "address:the_erc20_contract": {
            "nonce": "0",
            "balance": "0",
            "storage": {
              "''balance|address:erc20_owner_address": "1,000,000,000",
              "''total_supply": "1,000,000,000"
            },
            "code": "file:../../simple-erc20/output/simple-erc20.wasm"
          }
        }
      },
      {
        "step": "scDeploy",
        "txId": "deploy",
        "tx": {
          "from": "address:crowdfunding_owner_address",
          "contractCode": "file:../output/crowdfunding-erc20.wasm",
          "value": "0",
          "arguments": [
              "1,000,000",
              "123,456",
              "address:the_erc20_contract"
          ],
          "gasLimit": "1,000,000",
          "gasPrice": "0"
        },
        "expect": {
          "status": "0",
          "gas": "*",
          "refund": "*"
        }
      },
      {
        "step": "checkState",
        "accounts": {
          "address:erc20_owner_address": {
            "nonce": "1",
            "balance": "0",
            "storage": {}
          },
          "address:crowdfunding_owner_address": {
            "nonce": "1",
            "balance": "0",
            "storage": {}
          },
          "address:the_erc20_contract": {
            "nonce": "0",
            "balance": "0",
            "storage": {
              "''balance|address:erc20_owner_address": "1,000,000,000",
              "''total_supply": "1,000,000,000"
            },
            "code": "file:../../simple-erc20/output/simple-erc20.wasm"
          },
          "address:the_crowdfunding_contract": {
            "nonce": "0",
            "balance": "0",
            "storage": {
              "''owner": "address:crowdfunding_owner_address",
              "''target": "1,000,000",
              "''deadline": "123,456",
              "''erc20_contract_address": "address:the_erc20_contract"
            },
            "code": "file:../output/crowdfunding-erc20.wasm"
          }
        }
      }
    ]
  }
  