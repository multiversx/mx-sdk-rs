{
    "name": "buy more tickets than allowed",
    "steps": [
        {
            "step": "externalSteps",
            "path": "buy-ticket-all-options.scen.json"
        },
        {
            "step": "scCall",
            "txId": "buy-more-tickets-than-allowed",
            "tx": {
                "from": "address:acc1",
                "to": "address:the_lottery_contract",
                "value": "100",
                "function": "buy_ticket",
                "arguments": [
                    "str:lottery_name"
                ],
                "gasLimit": "100,000,000",
                "gasPrice": "0"
            },
            "expect": {
                "status": "4",
                "message": "str:Ticket limit exceeded for this lottery!",
                "gas": "*",
                "refund": "*"
            }
        },
        {
            "step": "checkState",
            "accounts": {
                "address:my_address": {
                    "nonce": "2",
                    "balance": "1,000,000",
                    "storage": {}
                },
                "address:acc1": {
                    "nonce": "2",
                    "balance": "999,900",
                    "storage": {}
                },
                "address:acc2": {
                    "nonce": "0",
                    "balance": "1,000,000",
                    "storage": {}
                },
                "address:the_lottery_contract": {
                    "nonce": "0",
                    "balance": "100",
                    "storage": {
                        "''ticketPrice|u32:12|''lottery_name": "100",
                        "''ticketsLeft|u32:12|''lottery_name": "4",
                        "''deadline|u32:12|''lottery_name": "123,456",
                        "''currentTicketNumber|u32:12|''lottery_name": "1",
                        "''prizePool|u32:12|''lottery_name": "100",
                        "''ticketHolder|u32:12|''lottery_name|0x00000000": "address:acc1",
                        "''numberOfEntriesForUser|u32:12|''lottery_name|address:acc1": "1",
                        "''maxEntriesPerUser|u32:12|''lottery_name": "1",
                        "''prizeDistribution|u32:12|''lottery_name": "u8:75|u8:25",
                        "''whitelist|u32:12|''lottery_name": "address:my_address|address:acc1|address:acc2"
                    },
                    "code": "file:../output/lottery.wasm"
                }
            }
        }
    ]
}
