{
    "name": "upgrade Vault SC to Forwarder Raw, and then back to vault",
    "steps": [
        {
            "step": "setState",
            "accounts": {
                "address:a_user": {},
                "sc:forwarder": {
                    "code": "file:../forwarder-raw/output/forwarder-raw.wasm"
                },
                "sc:child": {
                    "code": "file:../vault/output/vault.wasm",
                    "owner": "sc:forwarder"
                }
            }
        },
        {
            "step": "scCall",
            "id": "upgrade-vault-to-forwarder",
            "tx": {
                "from": "address:a_user",
                "to": "sc:forwarder",
                "function": "call_upgrade_from_source",
                "arguments": [
                    "sc:child",
                    "sc:forwarder"
                ],
                "gasLimit": "500,000,000",
                "gasPrice": "0"
            },
            "expect": {
                "out": []
            }
        },
        {
            "step": "checkState",
            "accounts": {
                "sc:child": {
                    "code": "file:../forwarder-raw/output/forwarder-raw.wasm"
                },
                "+": ""
            }
        },
        {
            "step": "scCall",
            "id": "upgrade-back-to-vault-with-args",
            "tx": {
                "from": "address:a_user",
                "to": "sc:forwarder",
                "function": "call_upgrade",
                "arguments": [
                    "sc:child",
                    "file:../vault/output/vault.wasm",
                    "str:upgrade-init-arg"
                ],
                "gasLimit": "500,000,000",
                "gasPrice": "0"
            },
            "expect": {
                "out": [
                    "str:upgrade-init-arg"
                ]
            }
        },
        {
            "step": "checkState",
            "accounts": {
                "sc:child": {
                    "code": "file:../vault/output/vault.wasm"
                },
                "+": ""
            }
        }
    ]
}
