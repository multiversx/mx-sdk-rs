{
    "name": "upgrade Vault SC to Forwarder, and then back to vault",
    "steps": [
        {
            "step": "setState",
            "accounts": {
                "address:a_user": {},
                "sc:forwarder": {
                    "code": "file:../forwarder/output/forwarder.wasm"
                },
                "sc:child": {
                    "code": "file:../vault/output/vault.wasm",
                    "owner": "sc:forwarder"
                }
            }
        },
        {
            "step": "scCall",
            "id": "upgrade-vault-to-forwarder",
            "tx": {
                "from": "address:a_user",
                "to": "sc:forwarder",
                "function": "upgrade_vault_from_source",
                "arguments": [
                    "sc:child",
                    "sc:forwarder"
                ],
                "gasLimit": "500,000,000",
                "gasPrice": "0"
            },
            "expect": {
                "out": []
            }
        },
        {
            "step": "checkState",
            "accounts": {
                "sc:child": {
                    "code": "file:../forwarder/output/forwarder.wasm"
                },
                "+": ""
            }
        },
        {
            "step": "scCall",
            "id": "upgrade-back-to-vault",
            "comment": "init results cannot be retrieved directly, since it is an async call, but we can experiment with callbacks in the future",
            "tx": {
                "from": "address:a_user",
                "to": "sc:forwarder",
                "function": "upgradeVault",
                "arguments": [
                    "sc:child",
                    "file:../vault/output/vault.wasm"
                ],
                "gasLimit": "500,000,000",
                "gasPrice": "0"
            },
            "expect": {
                "out": []
            }
        },
        {
            "step": "checkState",
            "accounts": {
                "sc:child": {
                    "code": "file:../vault/output/vault.wasm"
                },
                "+": ""
            }
        }
    ]
}
