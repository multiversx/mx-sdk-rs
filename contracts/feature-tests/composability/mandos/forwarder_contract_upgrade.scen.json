{
    "name": "upgrade Vault SC to Forwarder, and then back to vault",
    "steps": [
        {
            "step": "setState",
            "accounts": {
                "address:a_user": {},
                "sc:forwarder": {
                    "code": "file:../forwarder/output/forwarder.wasm"
                },
                "sc:child": {
                    "owner": "sc:forwarder",
                    "code":"file:../vault/output/vault.wasm"
                }
            }
        },
        {
            "step": "scCall",
            "txId": "upgrade-vault-to-forwarder",
            "tx": {
                "from": "address:a_user",
                "to": "sc:forwarder",
                "value": "0",
                "function": "upgradeChildContract",
                "arguments": [
                    "sc:child",
                    "file:../forwarder/output/forwarder.wasm"
                ],
                "gasLimit": "500,000,000",
                "gasPrice": "0"
            },
            "expect": {
                "out": []
            }
        },
        {
            "step": "checkState",
            "accounts": {
                "sc:child": {
                    "code": "file:../forwarder/output/forwarder.wasm"
                },
                "+": {}
            }
        },
        {
            "step": "scCall",
            "txId": "upgrade-back-to-vault",
            "tx": {
                "from": "address:a_user",
                "to": "sc:forwarder",
                "value": "0",
                "function": "upgradeChildContract",
                "arguments": [
                    "sc:child",
                    "file:../vault/output/vault.wasm",
                    "str:some_argument"
                ],
                "gasLimit": "500,000,000",
                "gasPrice": "0"
            },
            "expect": {
                "out": [
                    "str:some_argument"
                ]
            }
        }
    ]
}
