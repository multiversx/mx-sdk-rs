{
    "name": "Deploy factorial from deployer SC",
    "steps": [
        {
            "step": "externalSteps",
            "path": "deploy-main-sc.scen.json"
        },
        {
            "step": "setState",
            "newAddresses": [
                {
                    "creatorAddress": "sc:deployer",
                    "creatorNonce": "0",
                    "newAddress": "sc:child"
                }
            ]
        },
        {
            "step": "scCall",
            "txId": "deploy-factorial",
            "tx": {
                "from": "address:owner",
                "to": "sc:deployer",
                "value": "0",
                "function": "deployContract",
                "arguments": [
                    "file:../../../../contracts/examples/factorial/output/factorial.wasm"
                ],
                "gasLimit": "10,000,000",
                "gasPrice": "0"
            },
            "expect": {
                "status": "0",
                "message": "",
                "out": [
                    "sc:child"
                ],
                "gas": "*",
                "refund": "*"
            }
        },
        {
            "step": "checkState",
            "accounts": {
                "sc:child": {
                    "nonce": "0",
                    "balance": "0",
                    "storage": {},
                    "owner": "address:owner",
                    "code": "file:../../../../contracts/examples/factorial/output/factorial.wasm"
                },
                "+": {}
            }
        },
        {
            "step": "scCall",
            "txId": "call-factorial-child",
            "tx": {
                "from": "address:owner",
                "to": "sc:child",
                "value": "0",
                "function": "factorial",
                "arguments": [
                    "5"
                ],
                "gasLimit": "10,000,000",
                "gasPrice": "0"
            },
            "expect": {
                "status": "0",
                "message": "",
                "out": [
                    "120"
                ],
                "gas": "*",
                "refund": "*"
            }
        }
    ]
}
