                "sc:lottery": {
                    "nonce": "0",
                    "balance": "0",
                    "storage": {
                        "str:lotteryInfo|u32:12|str:lottery_name": "u32:1|u8:100|u32:5|u64:123,456|u32:1|u32:2|u8:75|u8:25|u32:3|address:my_address|address:acc1|address:acc2|u32:0|u32:0|u32:0",
