                "gasLimit": "10,000,000",
                "gasPrice": "0"
            },
            "expect": {
                "out": [],
                "status": "0",
                "gas": "*",
                "refund": "*"
            }
        },
        {
            "step": "checkState",
            "accounts": {
                "address:my_address": {
                    "nonce": "1",
                    "balance": "1,000,000",
                    "storage": {}
                },
                "address:participant1": {
                    "nonce": "0",
                    "balance": "1,800,000,000,000",
                    "storage": {}
                },
                "address:participant2": {
                    "nonce": "0",
                    "balance": "2,500,000,000,000",
                    "storage": {}
                },
                "sc:ping-pong": {
                    "nonce": "0",
                    "balance": "0",
                    "storage": {
                        "str:pingAmount": "500,000,000,000",
                        "str:activationTimestamp": "780",
                        "str:deadline": "123,780"
                    },
                    "code": "file:../output/ping-pong-egld.wasm"
                }
            }
        }
    ]
