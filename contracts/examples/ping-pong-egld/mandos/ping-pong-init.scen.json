{
    "name": "ping-pong deployment test",
    "gasSchedule": "v3",
    "steps": [
        {
            "step": "setState",
            "accounts": {
                "address:my_address": {
                    "nonce": "0",
                    "balance": "1,000,000"
                },
                "address:participant1": {
                    "nonce": "0",
                    "balance": "1,800,000,000,000"
                },
                "address:participant2": {
                    "nonce": "0",
                    "balance": "2,500,000,000,000"
                }
            },
            "newAddresses": [
                {
                    "creatorAddress": "address:my_address",
                    "creatorNonce": "0",
                    "newAddress": "sc:ping-pong"
