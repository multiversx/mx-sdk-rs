{
    "name": "lottery flow with burn percentage integrated",
    "gasSchedule": "dummy",
    "steps": [
        {
            "step": "externalSteps",
            "path": "lottery-init.scen.json"
        },
        {
            "step": "scCall",
            "comment": "try starting lottery without setting local burn role",
            "txId": "start limited tickets, fixed deadline - invalid",
            "tx": {
                "from": "address:my_address",
                "to": "sc:lottery",
                "value": "0",
                "function": "start",
                "arguments": [
                    "str:lottery_name",
                    "str:LOTTERY-123456",
                    "100",
                    "0x01|u32:2",
                    "0x01|u64:123,456",
                    "0x",
                    "0x",
                    "0x",
                    "50"
                ],
                "gasLimit": "100,000,000",
                "gasPrice": "0"
            },
            "expect": {
                "status": "4",
                "message": "str:The contract can't burn the selected token!",
                "gas": "*",
                "refund": "*"
            }
        },
        {
            "step": "setState",
            "comment": "simulate a local roles set for the token that will be used",
            "accounts": {
                "address:acc1": {
                    "nonce": "0",
                    "balance": "1,000,000",
                    "storage": {},
                    "esdt": {
                        "str:LOTTERY-123456": "200"
                    }
                },
                "sc:lottery": {
                    "nonce": "0",
                    "balance": "0",
                    "esdt": {
                        "str:LOTTERY-123456": {
                            "roles": [
                                "ESDTRoleLocalBurn"
                            ]
                        }
                    },
                    "storage": {},
                    "code": "file:../output/lottery-esdt.wasm"
                }
            }
        },
        {
            "step": "scCall",
            "comment": "start lottery after setting local burn role",
            "txId": "start limited tickets, fixed deadline, 50% burn rate",
            "tx": {
                "from": "address:my_address",
                "to": "sc:lottery",
                "value": "0",
                "function": "start",
                "arguments": [
                    "str:lottery_name",
                    "str:LOTTERY-123456",
                    "100",
                    "0x01|u32:2",
                    "0x01|u64:123,456",
                    "0x",
                    "0x",
                    "0x",
                    "50"
                ],
                "gasLimit": "100,000,000",
                "gasPrice": "0"
            },
            "expect": {
                "status": "0",
                "message": "",
                "gas": "*",
                "refund": "*"
            }
        },
        {
            "step": "checkState",
            "accounts": {
                "sc:lottery": {
                    "nonce": "0",
                    "balance": "0",
                    "esdt": {
                        "str:LOTTERY-123456": {
                            "roles": [
                                "ESDTRoleLocalBurn"
                            ]
                        }
                    },
                    "storage": {
                        "str:lotteryInfo|nested:str:lottery_name": {
                            "0-token_identifier": "nested:str:LOTTERY-123456",
                            "1-ticket_price": "biguint:100",
                            "2-tickets-left": "u32:2",
                            "3-deadline": "u64:123,456",
                            "4-max_entries_per_user": "u32:800",
                            "5-prize_distribution": "nested:u8:100",
                            "6-whitelist": "nested:",
                            "7-prize_pool": "biguint:0"
                        },
                        "str:burnPercentageForLottery|nested:str:lottery_name": "50"
                    },
                    "code": "file:../output/lottery-esdt.wasm"
                },
                "+": {}
            }
        },
        {
            "step": "scCall",
            "txId": "buy first ticket",
            "tx": {
                "from": "address:acc1",
                "to": "sc:lottery",
                "value": "0",
                "esdt": {
                    "tokenIdentifier": "str:LOTTERY-123456",
                    "value": "100"
                },
                "function": "buy_ticket",
                "arguments": [
                    "str:lottery_name"
                ],
                "gasLimit": "100,000,000",
                "gasPrice": "0"
            },
            "expect": {
                "message": "",
                "status": "0",
                "gas": "*",
                "refund": "*"
            }
        },
        {
            "step": "scCall",
            "txId": "buy second ticket",
            "tx": {
                "from": "address:acc1",
                "to": "sc:lottery",
                "value": "0",
                "esdt": {
                    "tokenIdentifier": "str:LOTTERY-123456",
                    "value": "100"
                },
                "function": "buy_ticket",
                "arguments": [
                    "str:lottery_name"
                ],
                "gasLimit": "100,000,000",
                "gasPrice": "0"
            },
            "expect": {
                "message": "",
                "status": "0",
                "gas": "*",
                "refund": "*"
            }
        },
        {
            "step": "checkState",
            "accounts": {
                "address:acc1": {
                    "nonce": "2",
                    "balance": "1,000,000",
                    "storage": {},
                    "esdt": {
                        "str:LOTTERY-123456": "0"
                    }
                },
                "sc:lottery": {
                    "nonce": "0",
                    "balance": "0",
                    "esdt": {
                        "str:LOTTERY-123456": {
                            "balance": "200",
                            "roles": [
                                "ESDTRoleLocalBurn"
                            ]
                        }
                    },
                    "storage": {
                        "str:lotteryInfo|nested:str:lottery_name": {
                            "0-token_identifier": "nested:str:LOTTERY-123456",
                            "1-ticket_price": "biguint:100",
                            "2-tickets-left": "u32:0",
                            "3-deadline": "u64:123,456",
                            "4-max_entries_per_user": "u32:800",
                            "5-prize_distribution": "nested:u8:100",
                            "6-whitelist": "nested:",
                            "7-prize_pool": "biguint:200"
                        },
                        "str:burnPercentageForLottery|nested:str:lottery_name": "50",
                        "str:ticketHolder|nested:str:lottery_name|str:.len": "2",
                        "str:ticketHolder|nested:str:lottery_name|str:.item|u32:1": "address:acc1",
                        "str:ticketHolder|nested:str:lottery_name|str:.item|u32:2": "address:acc1",
                        "str:numberOfEntriesForUser|u32:12|str:lottery_name|address:acc1": "2"
                    },
                    "code": "file:../output/lottery-esdt.wasm"
                },
                "+": {}
            }
        },
        {
            "step": "scCall",
            "txId": "determine-winner-same-ticket-holder",
            "tx": {
                "from": "address:my_address",
                "to": "sc:lottery",
                "value": "0",
                "function": "determine_winner",
                "arguments": [
                    "str:lottery_name"
                ],
                "gasLimit": "100,000,000",
                "gasPrice": "0"
            },
            "expect": {
                "status": "0",
                "message": "",
                "gas": "*",
                "refund": "*"
            }
        },
        {
            "step": "checkState",
            "comment": "check that 50% was burned, and 50% returned to acc1",
            "accounts": {
                "address:acc1": {
                    "nonce": "2",
                    "balance": "1,000,000",
                    "storage": {},
                    "esdt": {
                        "str:LOTTERY-123456": "100"
                    }
                },
                "sc:lottery": {
                    "nonce": "0",
                    "balance": "0",
                    "esdt": {
                        "str:LOTTERY-123456": {
                            "balance": "0",
                            "roles": [
                                "ESDTRoleLocalBurn"
                            ]
                        }
                    },
                    "storage": {
                        "str:lotteryInfo|nested:str:lottery_name": "",
                        "str:burnPercentageForLottery|nested:str:lottery_name": "0"
                    },
                    "code": "file:../output/lottery-esdt.wasm"
                },
                "+": {}
            }
        }
    ]
}
