{
    "name": "str-repeat",
    "steps": [
        {
            "step": "setState",
            "accounts": {
                "address:owner": {
                    "nonce": "0",
                    "balance": "0"
                },
                "sc:contract": {
                    "code": "mxsc:../output/str-repeat-mb-builder-cached.mxsc.json"
                }
            }
        },
        {
            "step": "scCall",
            "id": "benchmark-mb-builder-cached-10",
            "comment": "code is smaller, so basic wins here",
            "tx": {
                "from": "address:owner",
                "to": "sc:contract",
                "function": "mb_builder_benchmark",
                "arguments": [
                    "0x01020304",
                    "10"
                ],
                "gasLimit": "10,000,000",
                "gasPrice": "0"
            },
            "expect": {
                "out": "*",
                "status": "",
                "gas": "8834532"
            }
        },
        {
            "step": "scCall",
            "id": "benchmark-mb-builder-cached-tipping-point",
            "comment": "the caching optimization starts to compensate the larger code size",
            "tx": {
                "from": "address:owner",
                "to": "sc:contract",
                "function": "mb_builder_benchmark",
                "arguments": [
                    "0x01020304",
                    "22"
                ],
                "gasLimit": "10,000,000",
                "gasPrice": "0"
            },
            "expect": {
                "out": "*",
                "status": "",
                "gas": "8779332"
            }
        },
        {
            "step": "scCall",
            "id": "benchmark-mb-builder-cached",
            "comment": "for many repeats, the cached version wins",
            "tx": {
                "from": "address:owner",
                "to": "sc:contract",
                "function": "mb_builder_benchmark",
                "arguments": [
                    "0x01020304",
                    "10000"
                ],
                "gasLimit": "10,000,000,000",
                "gasPrice": "0"
            },
            "expect": {
                "out": "*",
                "status": "",
                "gas": "9938367902"
            }
        }
    ]
}
